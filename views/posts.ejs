<!DOCTYPE html>
<html>

<head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script src="https://cdn.bootcss.com/vue/2.4.4/vue.min.js"></script>
        <script src="https://cdn.bootcss.com/axios/0.16.2/axios.min.js"></script>
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <p>Welcome to
        <%= title %>
    </p>
    <div id="anchor" >
        <p v-for="item in postsList">
            {{ item.title }}
        </p>
    </div>
</body>
<script>
    var vm = new Vue({
        el:'#anchor',
        data:{
            postsList:[]
        },
        methods:{
            fetchData(){
                axios.get('/api/posts')
                     .then(response => {
                         vm.postsList = response.data.postsList;
                     })
            }
        }
    })

    vm.fetchData();
</script>

</html>